{
  "name": "Ambit Energy Scraper",
  "version": "1.0.0",
  "slug": "ambit_energy_scraper",
  "description": "Scrapes energy consumption data from Ambit Energy and sends it to Home Assistant",
  "url": "https://github.com/lam1623/ambit_energy_scraper",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "ingress": true,
  "timeout": 30,
  "panel_icon": "mdi:flash",
  "panel_title": "Ambit Energy Scraper",
  "services": [
    "mqtt:need"
  ],
  "uart": true,
  "udev": true,
  "privileged": false,
  "devices": [],
  "host_network": false,
  "host_pid": false,
  "host_dbus": false,
  "host_uts": false,
  "host_ipc": false,
  "map": [
    {
      "type": "share",
      "read_only": false
    },
    {
      "type": "homeassistant_config",
      "read_only": false,
      "path": "/config"
    },
    {
      "type": "addon_config",
      "read_only": false,
      "path": "/addon_config"
    }
  ],
  "ports": {
    "8000/tcp": 8000
  },
  "ports_description": {
    "8000/tcp": "HTTP Interface"
  },
  "options": {
    "username": "your_username",
    "password": "your_password",
    "ha_url": "http://homeassistant.local:8123",
    "ha_token": "your_long_lived_token",
    "scrape_interval": 3600
  },
  "schema": {
    "username": {
      "type": "str",
      "description": "Tu nombre de usuario de Ambit Energy",
      "required": true
    },
    "password": {
      "type": "str",
      "description": "Tu contraseña de Ambit Energy",
      "required": true
    },
    "ha_url": {
      "type": "str",
      "description": "URL de Home Assistant (e.g., http://homeassistant.local:8123)",
      "required": true
    },
    "ha_token": {
      "type": "str",
      "description": "Token de acceso de larga duración de Home Assistant",
      "required": true
    },
    "scrape_interval": {
      "type": "int",
      "default": 3600,
      "description": "Intervalo en segundos entre cada scraping de datos"
    }
  },
  "image": "ghcr.io/home-assistant/{arch}-ambit_energy_scraper",
  "env_vars": {},
  "addons": [],
  "auth_api": false,
  "docker_api": false,
  "homeassistant_api": false,
  "hassio_api": false,
  "realtime": false,
  "journald": false,
  "tmpfs": false,
  "privileged": false,
  "advanced": false,
  "stage": "stable"
}

